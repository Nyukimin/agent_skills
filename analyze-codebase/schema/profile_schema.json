{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/analyze-codebase/profile-schema-1.0.json",
  "title": "Profile",
  "description": "analyze-codebase プロファイル YAML の検証用スキーマ（1.0）",
  "type": "object",
  "required": ["name", "module_groups"],
  "properties": {
    "name": { "type": "string" },
    "profile_schema_version": { "type": "string" },
    "module_groups": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "dirs", "focus"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "dirs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "focus": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "refs_keywords": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "use_cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "base": { "type": "string" },
        "modules_subdir": { "type": "string" },
        "anomaly_file": { "type": "string" }
      }
    },
    "anomaly_categories": {
      "type": "array",
      "items": { "type": "string" }
    },
    "severity_levels": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
